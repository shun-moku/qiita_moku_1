<!DOCTYPE html>
<html>
  <head>
    <title>QiitaMoku1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar_row_1">
        <h1 class="grid-6"><a href="/"> Qiita</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav_grid-6">
            <span><%= current_user.nickname %>
              <ul class="user__info_1">
                <li>
                  <%= link_to "マイページ", "/users/#{current_user.id}" %>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </span>
            <%= link_to "投稿する", new_article_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
  </header>
    <%= yield %>
    <footer>
      <p>
        Copyright qiitamoku 2021.
      </p>
    </footer>
  </body>
</html>
